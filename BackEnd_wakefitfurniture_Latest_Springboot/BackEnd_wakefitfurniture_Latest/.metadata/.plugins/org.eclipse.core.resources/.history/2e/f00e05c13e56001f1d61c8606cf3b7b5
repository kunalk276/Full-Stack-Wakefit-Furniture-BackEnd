package com.wakefit.ecommerce.repository;

import com.wakefit.ecommerce.entity.Feedback;
import com.wakefit.ecommerce.dto.FeedbackDTO;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import java.util.List;

public interface FeedbackRepository extends JpaRepository<Feedback, Long> {

    List<Feedback> findByProductProductId(Long productId);

    @Query("SELECT new com.wakefit.ecommerce.dto.FeedbackDTO(f.feedbackId, f.rating, f.comment, f.feedbackDate, f.user.userId, p.productId, p.productName) " +
           "FROM Feedback f JOIN f.product p")
    List<FeedbackDTO> findAllFeedbackWithProductName();
}
